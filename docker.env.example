# ==================== video2mp3 (Docker) ====================
APP_ENV=local
APP_HTTP_ADDR=:8080
API_TOKEN=
REDIS_ADDR=redis:6379
REDIS_DB=0
DATABASE_URL=postgres://v2m:v2m_pass@postgres:5432/v2m?sslmode=disable

S3_ENDPOINT=http://minio:9000
S3_PUBLIC_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minio_access
S3_SECRET_KEY=minio_secret
S3_BUCKET=v2m
S3_REGION=us-east-1
S3_USE_PATH_STYLE=true
TEMP_DIR=/tmp/video2mp3

MAX_JOB_DURATION=10m
MAX_FILE_SIZE=200000000
DOWNLOAD_CONCURRENCY=1
TRANSCODE_CONCURRENCY=1
JOB_TIMEOUT=10m
MP3_URL_TTL=15m
JOB_RETENTION_DAYS=0
CLEANUP_INTERVAL=0
RATE_LIMIT_PER_MIN=0
CORS_ALLOW_ORIGINS=*

# video-parser service URL (container DNS)
PARSER_API_URL=http://video-parser:5001

# Frontend optional auth token
VITE_API_TOKEN=

# ==================== MinIO bootstrap ====================
MINIO_ROOT_USER=minio_access
MINIO_ROOT_PASSWORD=minio_secret

# ==================== video-parser (optional, AI/UI) ====================
QWEN_API_BASE_URL=https://api-inference.modelscope.cn/v1
QWEN_API_KEY=
QWEN_MODEL_ID=Qwen/Qwen3-VL-8B-Instruct
MAX_FRAMES=6
API_SERVER_URL=http://127.0.0.1:5001
DOMAIN=
